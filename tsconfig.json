{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./src*"
      ],
      "@common*": [
        "./src/common*"
      ],
      "@components*": [
        "./src/components*"
      ],
      "@shared-components*": [
        "./src/common/shared-components*"
      ],
      "@styles*": [
        "./src/styles*"
      ],
      "@api*": [
        "./src/api*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "out",
    ".next",
    "dist"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
